# Docker Production Environment Template
# Copy this file to .env.production and update with your actual values
# Copy-Item docker.env.template .env.production

# Database Configuration
MYSQL_ROOT_PASSWORD=SecureRootPassword123!
MYSQL_DATABASE=nextapp_db
MYSQL_USER=appuser
MYSQL_PASSWORD=SecureUserPassword123!

# Application Configuration
NODE_ENV=production
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Authentication
NEXTAUTH_SECRET=your-super-secret-key-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Redis Configuration  
REDIS_PASSWORD=SecureRedisPassword123!

# Monitoring
GRAFANA_PASSWORD=admin

# Database URL (automatically constructed from above values)
DATABASE_URL=mysql://root:${MYSQL_ROOT_PASSWORD}@mysql:3306/${MYSQL_DATABASE}

# Optional: External API Keys
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# OPENAI_API_KEY=sk-your_openai_api_key

# Optional: AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key 